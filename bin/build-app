#!/bin/bash -e

if [[ -z $1 ]]; then
    echo usage: build-app APP_DIR >&2
    return 1
fi

app_dir="$1"
app=$(tr '[:upper:]' '[:lower:]' <<< $app_dir)
prefix="$(realpath $(realpath $(which sdkmanager))/../../../..)"
build_tools="$prefix/build-tools/33.0.0"
key=~/.android/mykey.keystore
apk=app/build/outputs/apk/release/app-release-unsigned.apk

APKSIGNER="$build_tools/apksigner"

cd $app_dir

gradle build --warning-mode all

if [[ ! -f $key ]]; then
    cat >&2 <<- EOF

    Error: you don't have a key, create one (use password: "password") with:
	  keytool -genkey -v -keystore $key -keyalg RSA -sigalg SHA1withRSA -keysize 2048 -validity 10000
	EOF
    exit 1
fi
$APKSIGNER sign --ks $key --ks-pass pass:password $apk

# Move the apk outside of the app directory
mv $apk ../$app.apk
